<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/071897bdcc.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Overpass" rel="stylesheet">
    <title>Özel Bismil Teknoloji Koleji</title>
</head>
<body>
    <%- include("./parts/header.ejs") %>
      <div class="container index justify-content-center">
            <h1 class="duyuru-haberler">Öğretmenlerimiz</h1>
            <hr>
            <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            <% ogretmenler.forEach(x => { %>
            <div class="col col-center">
                <div class="ogretmenler">
                    <span class="rozet">
                        <% if(x.bolum.startsWith("Biyoloji")){%>
                            <i class="fa-solid fa-dna"></i>   
                        <%}else if(x.bolum.startsWith("Türk") || x.bolum.startsWith("Rehberlik") || x.bolum.startsWith("İngilizce") || x.bolum.startsWith("Tarih")){ %>
                            <i class="fa-solid fa-pencil"></i>    
                        <% }else if(x.bolum.startsWith("Enerji") || x.bolum.startsWith("Elektrik")){ %>
                            <i class="fa-solid fa-bolt"></i>    
                        <% }else if(x.bolum.startsWith("Coğrafya")){ %>
                            <i class="fa-solid fa-earth-americas"></i>    
                        <% }else if(x.bolum.startsWith("Fizik")){ %>
                            <i class="fa-solid fa-atom"></i>
                        <% }else if(x.bolum.startsWith("Beden")){ %>
                            <i class="fa-sharp fa-solid fa-volleyball"></i>
                        <% }else if(x.bolum.startsWith("Matematik")){ %>
                            <i class="fa-solid fa-divide"></i> 
                        <% }else if(x.bolum.startsWith("Resim")){ %>
                            <i class="fa-solid fa-palette"></i>
                        <% }else if(x.bolum.startsWith("Kimya")){ %>
                            <i class="fa-solid fa-flask-vial"></i>
                        <% }else if(x.bolum.startsWith("Din")){ %>
                            <i class="fa-solid fa-star-and-crescent"></i>
                        <% } %> %>
                    </span>
                    <img src="<%= x.img %>" alt="<%= x.isim %>">
                    <h3><%= x.isim %></h3>
                    <p class="text-muted">
                        <%= x.bolum %>
                    </p>
                </div>
            </div>
            <% }) %>
          </div>
      </div>
      <div class="padding"></div>
      <%- include("./parts/footer.ejs") %>
</body>
</html>